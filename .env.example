# ===========================================
# HEED PLATFORM - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env for development
# For Vercel: Add these in Project Settings > Environment Variables
# ===========================================

# Backend API URL (REQUIRED)
# Development: Your local machine backend URL
# Production: Your deployed backend URL
VITE_API_URL=https://your-backend-api.railway.app/api

# Development Settings (optional)
VITE_DEV_MACHINE_IP=192.168.1.5
VITE_DEV_PORT=5000

# Toggle: Use production API in development (true/false)
VITE_USE_RAILWAY_IN_DEV=true

# App Info
VITE_APP_NAME=Heed
VITE_APP_VERSION=1.0.0
